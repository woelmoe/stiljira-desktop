{
  "name": "stiljira-desktop",
  "version": "1.0.0",
  "main": "./dist/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "cross-env IS_DEV=true electron-vite dev --watch",
    "build": "electron-vite build",
    "build-all": "yarn build && cd src/renderer && yarn && yarn build",
    "package-linux": "electron-forge package --platform=linux --arch=x64",
    "package-win": "electron-forge package --platform=win32 --arch=x64",
    "pull-submodule": "git submodule update --init",
    "full-setup-win": "yarn && yarn pull-submodule && cd src/renderer && git checkout main && yarn && yarn build && cd ../../ && yarn build && yarn package-win",
    "full-setup-linux": "yarn && yarn pull-submodule && cd src/renderer && git checkout main && yarn && yarn build && cd ../../ && yarn build && yarn package-linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/express": "^4.17.21",
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.7",
    "express": "5.0.0-beta.3",
    "vite-plugin-static-copy": "^1.0.6"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^12.0.0",
    "cross-env": "^7.0.3",
    "electron": "30.0.0-alpha.3",
    "electron-builder": "^24.9.1",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-plugin-vue": "^9.21.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "5.2.6",
    "vite-plugin-eslint": "^1.8.1"
  }
}
